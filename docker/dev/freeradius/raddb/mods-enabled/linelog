linelog {
    filename = /var/log/freeradius/radius.log
    permissions = 0600
    reference = "messages.%{session-state:Tmp-String-1}"
    messages {
        request = "%T request %{User-Name} MAC: %{Calling-Station-Id} VLAN: %{reply:Tunnel-Private-Group-Id}"
        accept = "%T accept %{User-Name} %{session-state:User-Name} MAC: %{Calling-Station-Id} VLAN: %{reply:Tunnel-Private-Group-Id}"
        reject = "%T reject %{User-Name} %{session-state:User-Name} MAC: %{Calling-Station-Id} VLAN: %{reply:Tunnel-Private-Group-Id} Reason: %{reply:Reply-Message} %{Module-Failure-Message}"
    }
}