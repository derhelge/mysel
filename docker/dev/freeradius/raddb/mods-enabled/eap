# default Konfiguration aus Auslieferungszustand
# docker compose -f docker/dev/docker-compose.dev.yml exec freeradius cat /etc/raddb/mods-available/eap > docker/dev/freeradius/raddb/mods-available/eap
# grep -v -E '^[[:space:]]*(#|$)' docker/dev/freeradius/raddb/mods-available/eap > docker/dev/freeradius/raddb/mods-enabled/eap
eap {
	default_eap_type = md5
	timer_expire = 60
	ignore_unknown_eap_types = no
	cisco_accounting_username_bug = no
	max_sessions = ${max_requests}
	md5 {
	}
	gtc {
		auth_type = PAP
	}
	tls-config tls-common {
		private_key_password = whatever
		private_key_file = /etc/raddb/certs/radius.thga.de.key
		certificate_file = /etc/raddb/certs/radius.thga.de-2025.pem
		ca_file = /etc/raddb/certs/telesec-chain-without-ca.pem
		cipher_list = "DEFAULT"
		cipher_server_preference = no
		tls_min_version = "1.2"
		tls_max_version = "1.2"
		ecdh_curve = ""
		cache {
			enable = no
			lifetime = 24 # hours
			store {
				Tunnel-Private-Group-Id
			}
		}
		verify {
		}
		ocsp {
			enable = no
			override_cert_url = yes
			url = "http://127.0.0.1/ocsp/"
		}
	}
	
	ttls {
		tls = tls-common
		default_eap_type = md5
		virtual_server = "inner-tunnel"
	}
}
